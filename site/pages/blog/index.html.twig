{% extends 'layout/blog.twig' %}

{% block title %}Blog{% endblock %}
{% block head %}
    <meta name="robots" content="noindex,follow">
{% endblock %}
{% block blog_content %}
    <section itemscope itemtype="http://schema.org/Blog">
        <h1 class="page-header" itemprop="name">Blog</h1>

        {% set pagination = paginate(posts) %}
        {% include 'layout/partial/post-list.twig' with {posts: pagination.items} %}
    </section>
{% endblock %}
